{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(git status)",
      "Bash(git diff)",
      "Bash(git log)",
      "Bash(pyinstaller *)",
      "Bash(find)",
      "Bash(cd)",
      "Bash(mkdir)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo rm -rf *)",
      "Bash(dd if=/dev/zero of=*)",
      "Bash(:(){ :|:& };:)"
    ],
    "additionalDirectories": [],
    "defaultMode": "acceptEdits",
    "disableBypassPermissionsMode": "disable"
  },
  "includeCoAuthoredBy": true,
  "forceLoginMethod": "console",
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "sequential-thinking",
    "memory:"
  ],
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "source ~/.env.zsh; ~/.claude/notify_slack.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "^(Read|Write|Edit|MultiEdit)$",
        "hooks": [
          {
            "type": "command",
            "command": "source ~/.env.zsh; ~/.claude/hooks/slack-wait-approval.sh"
          }
        ]
      },
      {
        "matcher": "^(Bash|Grep|Glob|LS)$",
        "hooks": [
          {
            "type": "command",
            "command": "source ~/.env.zsh; ~/.claude/hooks/slack-notify-only.sh"
          }
        ]
      }
    ]
  }
}
